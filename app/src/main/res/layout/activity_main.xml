<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2"
        tools:context=".MainActivity">

    <com.jlyx.sodukugame.customViews.SodukuView
            android:padding="0dp"
            android:background="@color/color_1"
            android:id="@+id/sodukuV_main_activity"
            android:layout_width="match_parent" android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/pause_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_resume_pause_game"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintStart_toEndOf="@+id/bt_restart_game" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.009" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/restart_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_restart_game" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.026"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout"/>
    <Button
            android:text="@string/music_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_music_setting"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintStart_toEndOf="@+id/bt_change_model" android:layout_marginStart="8dp"/>
    <TableLayout
            android:layout_width="298dp"
            android:stretchColumns="3"
            android:layout_height="147dp" android:layout_marginTop="424dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="1"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_1"/>
            <Button
                    android:text="2"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_2"/>
            <Button
                    android:text="3"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_3"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button

                    android:text="4"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_4"/>
            <Button
                    android:text="5"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_5"/>
            <Button
                    android:text="6"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_6"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="7"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_7"/>
            <Button
                    android:text="8"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_8"/>
            <Button
                    android:text="9"
                    android:background="@drawable/button_selector_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bt_9"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="@string/change_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_change_model"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintStart_toEndOf="@+id/bt_resume_pause_game" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>